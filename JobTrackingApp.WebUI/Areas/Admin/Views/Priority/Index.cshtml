@using JobTrackingApp.Entities.Concrete
@model List<PriorityListViewModel>
@{
    ViewBag.Title = "Aciliyet Listele";
    Layout = "_AdminLayout";
}

<h2>Aciliyet İşlemleri</h2>
<hr>
<a asp-action="Add" asp-controller="Priority" class="btn btn-sm btn-outline-secondary my-2">Yeni Aciliyet Ekle</a>
@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Seviye</th>
            <th>İşlemler</th>
        </tr>
        </thead>
        <tbody>
        @foreach (PriorityListViewModel priority in Model)
        {
            <tr>
                <td>@priority.Id</td>
                <td>@priority.Level</td>
                <td>
                    <a href="#" class="btn btn-sm btn-outline-success">Detay</a>
                    <a asp-action="Edit" asp-controller="Priority" asp-route-id="@priority.Id" class="btn btn-sm btn-outline-warning">Düzenle</a>
                    <a href="#" class="btn btn-sm btn-outline-danger">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Bu modül için herhangi bir kayıt bulunamadı!</div>
}

